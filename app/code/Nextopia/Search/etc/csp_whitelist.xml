<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="nextopia_script_cdn" type="host">cdn.nextopia.net</value>
                <value id="nextopia_hosted" type="host">*.ecomm-nav.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="nextopia_css_cdn" type="host">cdn.nextopia.net</value>
            </values>
        </policy>		
        <policy id="connect-src">
            <values>
                <value id="nextopia_services" type="host">*.nextopia.net</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="nextopia_assets" type="host">*.nextopia.net</value>
            </values>
        </policy>        
    </policies>
</csp_whitelist>